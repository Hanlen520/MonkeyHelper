<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shang.monkeyhelper.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/to_blacklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_blacklist"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/to_statusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StatusBar 状态"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/expand_statusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="expand_statusbar"
            android:text="展开 StatusBar"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <ToggleButton
            android:id="@+id/change_floatview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textAllCaps="false"
            android:textOff="悬浮按钮已关闭"
            android:textOn="悬浮按钮已开启" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/do_special_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="do_special_dis"
            android:text="do special dis"
            android:textAllCaps="false"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"
            android:visibility="gone" />

        <Button
            android:id="@+id/do_special_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="do_special_en"
            android:text="do special en"
            android:textAllCaps="false"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>